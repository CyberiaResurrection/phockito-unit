{
    "name": "balihoo/phockito-unit",
    "type": "library",
    "description": "A library easing the combination of Phockito & PHP Unit",
    "keywords": [ "phockito", "mock", "test", "unit", "PHP Unit" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Balihoo, Inc.",
            "email": "github@balihoo.com"
        }
    ],
    "minimum-stability": "stable",

    "require": {
        "mnapoli/phpdocreader": "1.*",
        "crashuxx/phockito" : "dev-master",
        "php": ">=5.3.0"
    },

    "require-dev": {
        "satooshi/php-coveralls": "dev-master"
    },

    "autoload": {
        "psr-0": {
            "PhockitoUnit": "src/",
            "UnitTests" : "tests/"
        }
    }
}
